<html>
    <head>
        <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Preguntas</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

    </head>
    <body>
        Aqui van <%= @cantidadPreguntas%>
        <ol>
        <% @preguntas.each do |pregunta| %>
        <li>
            <div class="form-group">
            <label for=<%@n%>>Pregunta: <%= pregunta['Pregunta']%></label>
            <select class="form-control" id=<%=@n%>>
              <option>Seleciona una respuesta...</option>
              <option><%= pregunta['Correcta']%></option>
              <option><%= pregunta['Incorrecta1']%></option>
              <option><%= pregunta['Incorrecta2']%></option>
            </select>
            <br>
            <%@n = @n + 1%>
        </li>
        <%end%>
        </ol>
        <a id="boton" class="btn btn-primary" type="button">Resultados</a>
        <script>
        //document.getElementById("num_preguntas").onchange = function() {myFunction()};
        document.getElementById("boton").onclick = function() {myFunction()};
        function myFunction() {
            let respuestas = [];
            let n = <%= @cantidadPreguntas%>
            console.log("Cantidad: "+ n);
            for (let i = 0; i < n; i++) {
                respuestas.push(document.getElementById(i).value);
            }
            console.log(respuestas)
            location.href = "/respuestas/"+respuestas;
        }
        </script>
    </body>
</html>
